header
  background-image: url("../images/header-bg.jpg")
  background-position: center center
  background-size: cover
  color: #fff
  margin: 0
  padding: 2.3rem 0 2.3rem
  position: relative
  text-align: center

  h1
    position: relative
    z-index: 2
    text-shadow: 1px 1px 5px rgba(0, 0, 0, 0.3)


  &:before
    content: ""
    width: 100%
    height: 100%
    position: absolute
    top: 0
    left: 0
    background: linear-gradient(45deg, #398BC5, #A177B4)
    opacity: 0.9
    z-index: 1


.toc-container
  position: fixed
  top: 0
  left: 0
  width: 300px
  height: 100%
  background: linear-gradient(45deg, #398BC5, #A177B4)
  transform: translate3d(-320px, 0, 0)
  box-shadow: 2px 0px 20px #1C1D1C
  transition: transform 0.4s cubic-bezier(0.7, 0, 0.3, 1), -webkit-transform 0.4s cubic-bezier(0.7, 0, 0.3, 1)
  overflow-y: scroll
  z-index: 9

.toc-container--shown
  transform: translate3d(0, 0, 0)

.toc-nav
  padding: 1em
  margin: 0
  list-style: none
  font-size: 1.1rem

  li:not(:last-child)
    margin-bottom: .3em


.toc-header
  color: #ffffff
  margin-top: 0.5em

.toc-nav__link
  color: #ffffff
  padding-left: 1em
  text-decoration: none

  &:hover
    text-decoration: underline


.toc-close
  position: fixed
  top: 1em
  right: 1em
  color: #ffffff
  cursor: pointer

  use
    fill: #ffffff
